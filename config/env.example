# Zoho OAuth Configuration (要設定)
ZOHO_CLIENT_ID=your_zoho_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_client_secret_here
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token_here
PORTAL_ID=your_portal_id_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_32_chars_long_minimum
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=12

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# Security Configuration
ALLOWED_IPS=127.0.0.1,::1
RATE_LIMIT_PER_MINUTE=100

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# API Configuration
API_BASE_URL=https://projectsapi.zoho.com/restapi
WORKDRIVE_API_URL=https://www.zohoapis.com/workdrive/api/v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# Cache Configuration
CACHE_TTL_SECONDS=300
TOKEN_CACHE_TTL_SECONDS=3300

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
ENABLE_WEBHOOKS=true 